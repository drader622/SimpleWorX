<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="description" content="Your description goes here" />
      <meta name="keywords" content="one, two, three" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />

      <title>SimpleWorx</title>

      <!-- external CSS link -->
      <link rel="stylesheet" href="css/normalize.css" />
      <link rel="stylesheet" href="css/style.css" />

      <!-- font awesome -->
      <script
         src="https://kit.fontawesome.com/cab467bb3d.js"
         crossorigin="anonymous"
      ></script>
      <!-- fonts -->
      <link
         href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:wght@300;400;500;700&display=swap"
         rel="stylesheet"
      />
   </head>
   <body id="index">
      <nav class="nav flex">
         <div id="listToggle" class="flex">
            <input type="checkbox" />
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
            <ul class="navButtons flex">
               <a href="/" class="darkMode"><i class="fa-solid fa-house"></i><h2>Home</h2></a>
               <a href="/account" class="accountInfoMain darkMode"><i class="icon fa-solid fa-user"></i><h2>Account</h2></a>
               <a href="#" id="moduleInfo" class="moduleInfoMain darkMode"><i class="icon fa-solid fa-industry"></i><h2>Module Info</h2></a>
               <a href="/workOrders" class="workOrdersMain darkMode"><i id="workOrdersInfo" class="fa-solid fa-clipboard-list"></i><h2>Work Oders</h2></a>
               <!-- <a href="#" class="pmInfoMain darkBackground"><i class="fa-solid fa-calendar-day"></i><h2>PM Info</h2></a> -->
               <a href="#" class="messagingMain darkMode"><i class="fa-solid fa-comment"></i><h2>Messaging</h2></a>
               <a href="/team" class="darkMode"><i class="fa-solid fa-people-group"></i><h2>Dept Team</h2></a>
            </ul>
         </div>
      </nav>

      <section class="mainContainer">
         <section class="employee darkMode flex">
            <img class="logo" src="/images/default-monochrome.svg" alt="">
            </img>            
            <section class="flex">
               <section class="container flex <%= (user) ? '' : 'hidden'%>">
                  <% if(user !== undefined) { %>
                     <span><%= user.firstName %> <%= user.lastName %></span>
                     <span><%= user.title %></span>
                     <span><%= user.department %></span>
                  <% } %>
               </section>
               <% if (user !== undefined) { %>
                  <span class="userPic"><img class="headshot" src="/images/headshot.png" alt=""/></span>
                  <a href="/logout" class="logout darkMode">Logout</a>
               <% } else { %>
                  <a href="/" class="darkMode"><i class="fa-solid fa-house"></i><h2></h2></a>
                  <a href="/login" class="logout darkMode">Login</a>
               <% } %>
            </section>
            <section>
               <p>Dark Mode</p>
               <input type="checkbox" id="switch" class="checkbox" />                 
               <label for="switch" class="toggle">
               </label>
            </section> 
         </section>
         <section class="main">
         </section>
      </section>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/pusher/7.1.1-beta/pusher.min.js" integrity="sha512-BPyqC/fsFB0wLkveLSwmEDvb8AHSezUQqCSL2mMieTTPvC4BfjIJIuLVH+4M6cRJFvYiwvdW1DKcVg77g4Mlrg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <!-- <script type="text/javascript" src="js/main.js"></script> -->
   </body>
</html>
