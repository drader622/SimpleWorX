<%- include('partials/header') -%>
<main class="woInfo flex">
   <section class="buttons flex">
      <a href="#" class="respond">Respond</a>
      <a href="#" class="close">Close</a>
      <a href="#" class="delete">Delete</a>
   </section>
   <section class="info flex">
      <section class="container requested flex">
         <section class="woTop flex">
            <div>WO# <%= workOrder.workOrderNum %></div>
            <div>Status: <%= workOrder.status %></div>
         </section>
         <section class="reqBottom flex">
            <section class="info flex">
               <div>Requested Dept: <%= workOrder.reqDept %><span id="department"></span></div>
               <div>Requested Location: <%= workOrder.reqLocation %><span id="location"></span></div>
               <div>Requested By: <%= workOrder.reqEmp %><span id="reqBy"></span></div>
               <div>Requested At: <%= workOrder.reqDate %><span id="reqDate"></span></div>
               <!-- <div>Requested Time: <%= workOrder.reqLocation %><span id="reqTime"></span></div> -->
            </section>
            <section class="detail flex">
               <h2>Problem Detail</h2>
               <span><%= workOrder.probDetail %></span>
            </section>
         </section>
      </section>
      <section class="container responded flex">
         <section class="info flex">
            <div>Responded By: <span id="resEmp"></span></div>
            <div>Responded Day: <span id="resDate"></span></div>
            <div>Responded Time: <span id="resTime"></span></div>
         </section>
         <section class="detail flex">
            <h2>Solution Detail</h2>
            <section class="solDetail"></section>
         </section>
      </section>
   </section>
</main>
<%- include('partials/footer') -%>
