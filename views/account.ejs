<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="description" content="Your description goes here" />
      <meta name="keywords" content="one, two, three" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />

      <title>SimpleWorx</title>

      <!-- external CSS link -->
      <link rel="stylesheet" href="css/normalize.css" />
      <link rel="stylesheet" href="css/style.css" />

      <!-- font awesome -->
      <script
         src="https://kit.fontawesome.com/cab467bb3d.js"
         crossorigin="anonymous"
      ></script>
      <!-- fonts -->
      <link
         href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:wght@300;400;500;700&display=swap"
         rel="stylesheet"
      />
   </head>
   <body class="">
      <nav class="nav flex">
         <div id="listToggle" class="flex">
            <input type="checkbox" />
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
            <ul class="navButtons flex">
               <a href="/" class="darkMode"><i class="fa-solid fa-house"></i></a>
               <a href="/account" class="accountInfoMain darkMode"><i class="icon fa-solid fa-user"></i></a>
               <a href="#" class="moduleInfoMain darkMode"><i class="icon fa-solid fa-industry"></i></a>
               <a href="/workOrders" class="workOrdersMain darkMode"><i id="workOrdersInfo" class="fa-solid fa-clipboard-list"></i></a>
               <!-- <a href="#" class="pmInfoMain darkMode"><i class="fa-solid fa-calendar-day"></i></a> -->
               <a href="#" class="messagingMain darkMode"><i class="fa-solid fa-comment"></i></a>
               <a href="/team" class="coworkerInfoMain darkMode"><i class="fa-solid fa-people-group"></i></a>
            </ul>
         </div>
      </nav>

      <section class="mainContainer">
         <section class="employee darkMode flex">
            <img class="logo" src="/images/default-monochrome.svg" alt="">
            </img>            
            <section class="flex">
               <section class="container flex">
                  <span><%= user.firstName %> <%= user.lastName %></span>
                  <span><%= user.title %></span>
                  <span><%= user.department %></span>
               </section>
               <span class="userPic"
               ><img class="headshot" src="/images/headshot.png" alt=""
               /></span>
               <a href="/user" class="logout">Logout</a>
            </section>
            <section>
               <p>Dark Mode</p>
               <input type="checkbox" id="switch" class="checkbox" />                 
               <label for="switch" class="toggle">
               </label>
            </section> 
         </section>
         <section class="main">
            <section class="accountInfoMain flex">
               <h1 class="personal darkLettering">Personal Information</h1>
               <section class="flex personalInfo">
                  <section class="summary darkLettering">
                     <h2 class="employeeName darkLettering" id="employeeName"></h2>
                     <img src="\images\headshot.png" alt="" class="employeePicture">
                  </section>
                  <form action="" class="flex formInputs">
                     <section class="flex inputField darkBackground">
                        <h2>First Name</h2>
                        <input class="userInput darkBackground" type="text" id="firstName" value="<%= user.firstName %>" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Last Name</h2>
                        <input class="userInput darkBackground" type="text" id="lastName" value="<%= user.lastName %>" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Email</h2>
                        <input class="userInput darkBackground" type="text" id="email" value="<%= user.email %>" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Phone Number</h2>
                        <input class="userInput darkBackground" type="number" id="number" value="4196152130" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Street Address</h2>
                        <input class="userInput darkBackground" type="text" id="address1" value="605 N Ash St" disabled>
                     </section>
                     <!-- <section class="flex inputField darkBackground">
                        <h2>Address Line 2</h2>
                        <input class="darkBackground" type="text" id="address2" value="" disabled>
                     </section> -->
                     <section class="flex inputField darkBackground">
                        <h2>City</h2>
                        <input class="userInput darkBackground" type="text" id="city" value="Deshler" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>State</h2>
                        <input class="userInput darkBackground" type="text" id="state" value="Ohio" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Zip Code</h2>
                        <input class="userInput darkBackground" type="text" id="zipCode" value="43516" disabled>
                     </section>
                  </form>
               </section>
               <section class="flex edit">
                  <a href="#" class="editBtn hidden" id="cancel"><i class="fa-solid fa-xmark"></i></a>
                  <a href="#" class="editBtn hidden" id="save"><i class="fa-solid fa-floppy-disk"></i></a>
                  <a href="#" class="editBtn darkBackground" id="edit"><i class="fa-solid fa-pen"></i></a>
               </section>

               <h1 class="employment darkLettering">Employment Information</h1>
                  <form action="" class="flex employmentInfo formInputs">
                     <section class="flex inputField darkBackground">
                        <h2>Job Title</h2>
                        <input class="darkBackground" type="text" id="jobTitle" value="Electronic Technician" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Compensation</h2>
                        <input class="darkBackground" type="text" id="pay" value="$48.71/hr" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Supervisor</h2>
                        <input class="darkBackground" type="text" id="Supervisor" value="Ted Bonham" disabled>
                     </section>
                     <section class="flex inputField darkBackground">
                        <h2>Crew</h2>
                        <input class="darkBackground" type="text" id="crew" value="C" disabled>
                     </section>
                  </form>
            </section>
         </section>
      </section>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/pusher/7.1.1-beta/pusher.min.js" integrity="sha512-BPyqC/fsFB0wLkveLSwmEDvb8AHSezUQqCSL2mMieTTPvC4BfjIJIuLVH+4M6cRJFvYiwvdW1DKcVg77g4Mlrg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <script type="text/javascript" src="js\main.js"></script>
      <script type="text/javascript" src="js\account.js"></script>
   </body>
</html>
