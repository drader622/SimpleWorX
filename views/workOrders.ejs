         <section class="createContainer flex">
            <section class="sort flex">
               <h3 class="large">Sort Work Orders </h3>
               <h3 class="small">Sort</h3>
               <select name="sort" id="sortOptions" class="sortOptions">
                  <option value="recent">Recent</option>
                  <option value="open">Open</option>
                  <option value="closed">Closed</option>
                  <option value="responded">Responded To</option>
               </select>
            </section>
            <a href="/create" id="createWO" class="create flex large"
               >+ Create New Work Order</a
            >
            <a href="/create" id="createWO" class="createWOMain create flex small">+</a>
         </section>
         <section class="main">
            <section class="workOrdersMain flex">
               <section class="title darkMode flex">
                  <span>WO Number</span>
                  <span>Status</span>
                  <span>Requested Dept</span>
                  <span>Requested Location</span>
                  <span>Problem Detail</span>
               </section>
               <ul class="workOrders">
                  <% for(let i= workOrders.length - 1; i > 0; i--) {%>
                     <li class='request flex darkMode <%= (workOrders[i].respondedTo === true) ? 'reqRespondedTo' : ''%> <%= (workOrders[i].status === 'closed') ? 'closed' : '' %>'>
                        <span class="woNum">WO# <%= workOrders[i].workOrderNum %></span>
                        <span><%= workOrders[i].status %></span>
                        <% switch(workOrders[i].reqDept) {
                           case '1' : %>
                              <span>Dept Lead</span>
                           <% break;
                           case '2' : %>
                              <span>Electrician</span>
                           <% break;
                           case '3' : %>
                              <span>Machinist</span>
                           <% break;
                           case '4' : %>
                              <span>Millwright</span>
                           <% break;
                           case '5' : %>
                              <span>Warehouse</span>
                           <% break;
                        } %>   
                        <% switch(workOrders[i].mach) {
                           case '1' : %>
                              <span>SP <%= workOrders[i].mod %> <%= workOrders[i].machNum %></span>
                           <% break;
                           case '2' : %>
                              <span>BAL <%= workOrders[i].mod %> <%= workOrders[i].machNum %></span>
                           <% break;
                           case '3' : %>
                              <span>LNR <%= workOrders[i].mod %> <%= workOrders[i].machNum %></span>
                           <% break;
                           case '4' : %>
                              <span>CP <%= workOrders[i].mod %> <%= workOrders[i].machNum %></span>
                           <% break;
                           case '5' : %>
                              <span>AB <%= workOrders[i].mod %> <%= workOrders[i].machNum %></span>
                           <% break;
                        } %>   
                        <span><%= workOrders[i].probDetail %></span>
                        <span class="hidden"><%= workOrders[i].respondedTo %></span>
                     </li>
                  <% } %>
               </ul>
               <section id="closedWorkOrders" class="container hidden">
                  <ul class="workOrders">
                  </ul>
               </section>
            </section>
            <section class="woInfo darkMode hidden flex">
               <section class="buttons flex">
                  <a href="#" class="respond hidden">Respond</a>
                  <a href="#" class="close hidden">Close</a>
                  <a href="#" class="delete hidden">Delete</a>
               </section>
               <section class="info flex">
                  <section class="requested flex">
                     <section class="left flex">

                        <div>WO# <span id="woNum"></span></div>
                        <div>Status: <span id="status"></span></div>
                        <div>Requested Dept: <span id="department"></span></div>
                        <div>
                           Requested Location: <span id="location"></span>
                        </div>
                     </section>
                     <section class="middle flex">
                        <div>Requested By: <span id="reqBy"></span></div>
                        <div>Requested Day: <span id="reqDate"></span></div>
                        <div>Requested Time: <span id="reqTime"></span></div>
                     </section>
                     <section class="textDetail">
                        <h2>Problem Detail</h2>
